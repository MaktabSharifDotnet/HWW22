@model App.Domain.Core.Dtos.OrderItemAgg.OrderItemDto

@{
    ViewData["Title"] = "جزئیات آیتم‌های سفارش";
}

<link rel="stylesheet" href="~/css/admin-order-detail.css" />

<div class="container mt-4">

    <h2 class="mb-4 text-center">جزئیات آیتم‌های سفارش</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Error"]</div>
    }

    <div class="card shadow-lg">

        <div class="card-header bg-dark text-white text-center fs-5">
            اطلاعات آیتم سفارش
        </div>

        <div class="card-body">

            <table class="table table-bordered table-striped text-center align-middle">
                <tbody>
                    <tr>
                        <th>شماره سفارش</th>
                        <td>@Model.OrderId</td>
                    </tr>
                    <tr>
                        <th>شناسه محصول</th>
                        <td>@Model.ProductId , @Model.Name</td>
                    </tr>
                    <tr>
                        <th>تعداد</th>
                        <td>@Model.Count</td>
                    </tr>
                    <tr>
                        <th>قیمت واحد</th>
                        <td>@Model.UnitPrice.ToString("#,0") تومان</td>
                    </tr>
                </tbody>
            </table>

            <div class="text-center mt-4">
                <a asp-area="Admin"
                   asp-controller="Order"
                   asp-action="Index"
                   class="btn btn-secondary px-4">
                    بازگشت
                </a>
            </div>

        </div>
    </div>
</div>
