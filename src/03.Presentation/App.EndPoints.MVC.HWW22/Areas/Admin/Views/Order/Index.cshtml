@model List<App.Domain.Core.Dtos.OrderAgg.OrderDto>

@{
    ViewData["Title"] = "مدیریت سفارشات";
}

<link rel="stylesheet" href="~/css/admin-order.css" />

<div class="container mt-4">

    <h2 class="mb-4 text-center">مدیریت سفارشات</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="table-responsive shadow-lg p-3 bg-white rounded">

        <table class="table table-hover text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>شناسه کاربر</th>
                    <th>مبلغ کل</th>
                    <th>تاریخ ثبت</th>
                    <th>وضعیت پرداخت</th>
                    <th>جزئیات</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.UserId</td>

                        <td>@order.TotalAmount.ToString("#,0") تومان</td>

                        <td>@order.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>

                        <td>
                            @if (order.IsPaid)
                            {
                                <span class="badge bg-success">پرداخت شده</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">پرداخت نشده</span>
                            }
                        </td>

                        <td>
                            <a asp-area="Admin"
                               asp-controller="Order"
                               asp-action="Detail"
                               asp-route-orderId="@order.OrderId"
                               class="btn btn-sm btn-outline-primary">
                                مشاهده
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>
