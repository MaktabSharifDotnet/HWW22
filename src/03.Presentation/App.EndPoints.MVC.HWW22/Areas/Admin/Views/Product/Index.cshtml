@using App.Domain.Core.Dtos.ProductAgg
@model ProductListDto

@{
    ViewData["Title"] = "مدیریت محصولات";
 
    var currentCatId = Context.Request.Query["categoryId"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/product-index.css" />
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold text-secondary">لیست محصولات</h4>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> افزودن محصول جدید
        </a>
    </div>

    <div class="card mb-4 border-0 shadow-sm">
        <div class="card-body py-3">
            <form method="get" class="row g-3 align-items-center">
                <input type="hidden" name="categoryId" value="@currentCatId" />

                <div class="col-auto">
                    <label class="col-form-label">تعداد نمایش:</label>
                </div>
                <div class="col-auto">
                    <select name="pageSize" class="form-select form-select-sm" onchange="this.form.submit()">
                        <!option value="5" @(Model.PageSize == 5 ? "selected" : "")>5</!option>
                        <!option value="10" @(Model.PageSize == 10 ? "selected" : "")>10</!option>
                        <!option value="20" @(Model.PageSize == 20 ? "selected" : "")>20</!option>
                        <!option value="50" @(Model.PageSize == 50 ? "selected" : "")>50</!option>
                    </select>
                </div>
            </form>
        </div>
    </div>

    <div class="product-table-card">
        @if (Model.Products != null && Model.Products.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>تصویر</th>
                            <th>عنوان محصول</th>
                            <th>دسته‌بندی</th>
                            <th>قیمت (تومان)</th>
                            <th class="text-center">موجودی</th>
                            <th>تاریخ ایجاد</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Products)
                        {
                            var imagePath = string.IsNullOrEmpty(item.Image) ? "default.png" : item.Image;

                            <tr>
                                <td>
                                    <img src="~/images/ProductsAgg/@imagePath" class="product-img-thumbnail" alt="@item.Title">
                                </td>
                                <td class="fw-bold">@item.Title</td>
                                <td>
                                    <span class="badge bg-light text-dark border">@item.CategoryName</span>
                                </td>
                                <td>@item.Price.ToString("N0")</td>
                                <td class="text-center">
                                    @if (item.Inventory == 0)
                                    {
                                        <span class="badge bg-danger inventory-badge">ناموجود</span>
                                    }
                                    else if (item.Inventory < 5)
                                    {
                                        <span class="badge bg-warning text-dark inventory-badge">@item.Inventory</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success inventory-badge">@item.Inventory</span>
                                    }
                                </td>
                                <td class="small text-muted">@item.CreatedAt.ToString("yyyy/MM/dd")</td>
                                <td>
                                    <a asp-action="Edit" asp-route-productId="@item.Id" class="btn btn-warning btn-sm" title="ویرایش">
                                        <i class="bi bi-pencil">ویرایش</i>
                                    </a>
                                    <form asp-action="Delete" asp-route-productId="@item.Id" method="post" class="d-inline-block">
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('آیا از حذف این محصول مطمئن هستید؟')">
                                            <i class="bi bi-trash">حذف</i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.TotalPages > 1)
            {
                <nav class="pagination-container">
                    <ul class="pagination">

                        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link" asp-action="Index"
                               asp-route-pageNumber="@(Model.PageNumber - 1)"
                               asp-route-pageSize="@Model.PageSize"
                               asp-route-categoryId="@currentCatId">
                                قبلی
                            </a>
                        </li>

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item">
                                <a class="page-link @(i == Model.PageNumber ? "active" : "")"
                                   asp-action="Index"
                                   asp-route-pageNumber="@i"
                                   asp-route-pageSize="@Model.PageSize"
                                   asp-route-categoryId="@currentCatId">
                                    @i
                                </a>
                            </li>
                        }

                        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                            <a class="page-link" asp-action="Index"
                               asp-route-pageNumber="@(Model.PageNumber + 1)"
                               asp-route-pageSize="@Model.PageSize"
                               asp-route-categoryId="@currentCatId">
                                بعدی
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="alert alert-info text-center py-4">
                <i class="bi bi-box-seam display-4 d-block mb-3"></i>
                هنوز محصولی ثبت نشده است.
            </div>
        }
    </div>
</div>