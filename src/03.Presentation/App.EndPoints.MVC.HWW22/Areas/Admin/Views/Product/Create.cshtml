@using App.EndPoints.MVC.HWW22.Areas.Admin.Models
@model CreateProductViewModel

@{
    ViewData["Title"] = "افزودن محصول جدید";
}

@section Styles {
    <link rel="stylesheet" href="~/css/product-create.css" />
}

<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-4" style="max-width: 800px; margin: 0 auto;">
        <h4 class="fw-bold text-secondary">
            <i class="bi bi-plus-square-dotted"></i> افزودن محصول جدید
        </h4>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-right"></i> بازگشت به لیست
        </a>
    </div>

    <div class="create-product-card">
        <form asp-action="Create" method="post" enctype="multipart/form-data">

            
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

            <div class="row">
                <div class="col-md-7">

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" placeholder="نام محصول را وارد کنید..." />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CategoryId" class="form-label"></label>
                            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                                <option value="">-- انتخاب کنید --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Price" type="number" class="form-control" />
                                <span class="input-group-text text-muted small">تومان</span>
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Inventory" class="form-label"></label>
                        <input asp-for="Inventory" type="number" class="form-control" value="0" />
                        <span asp-validation-for="Inventory" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="توضیحات محصول..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-5">
                    <label asp-for="Image" class="form-label mb-2">تصویر محصول</label>
                    <div class="upload-box">
                        <i class="bi bi-cloud-arrow-up upload-icon"></i>
                        <h6 class="text-muted mb-3">تصویر را انتخاب کنید</h6>

                        <input asp-for="Image" type="file" class="form-control" accept="image/*" />
                        <span asp-validation-for="Image" class="text-danger d-block mt-2"></span>

                        <div class="form-text mt-3 text-muted small">
                            فرمت‌های مجاز: JPG, PNG, WEBP<br>
                            حداکثر حجم: 5 مگابایت
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4 pt-3 border-top d-flex gap-2">
                <button type="submit" class="btn btn-success px-4">
                    <i class="bi bi-check-lg"></i> ثبت محصول
                </button>
                <a asp-action="Index" class="btn btn-light border">انصراف</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}