@using App.Domain.Core.Dtos.CategoryAgg
@model List<CategoryDto>

@{
    ViewData["Title"] = "مدیریت دسته‌بندی‌ها";
}

@section Styles {
    <link rel="stylesheet" href="~/css/category-index.css" />
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>لیست دسته‌بندی‌ها</h3>
    <a asp-action="Create" class="btn btn-success">
        + ایجاد دسته‌بندی جدید
    </a>
</div>

<div class="category-table-card">
    @if (Model != null && Model.Any())
    {
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>شناسه</th>
                    <th>نام دسته‌بندی</th>
                    <th>توضیحات</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>
                            <a asp-action="Edit" asp-route-categoryId="@item.Id" class="btn btn-warning btn-sm btn-action">ویرایش</a>
                            <form asp-action="Delete" asp-route-categoryId="@item.Id" method="post" style="display:inline-block;">

                                <button type="submit" class="btn btn-danger btn-sm btn-action"
                                        onclick="return confirm('آیا از حذف این دسته‌بندی اطمینان دارید؟')">
                                    حذف
                                </button>

                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">
            هیچ دسته‌بندی‌ای یافت نشد.
        </div>
    }
</div>