@using App.EndPoints.MVC.HWW22.Models
@model HomeIndexViewModel

@{
    ViewData["Title"] = "خانه - فروشگاه اینترنتی";
   
}

<link href="~/css/home-style.css" rel="stylesheet" />

<div class="container-fluid hero-section text-center mb-4">
    <h1 class="display-5 fw-bold">مکتب شاپ</h1>
    <p class="lead">جدیدترین محصولات  با بهترین قیمت</p>
</div>

<div class="container">
    <div class="row">

        <div class="col-lg-3 col-md-4 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white fw-bold">
                    <i class="bi bi-list"></i> دسته‌بندی‌ها
                </div>
                <div class="list-group list-group-flush">
                    <a asp-controller="Home" asp-action="Index" asp-route-categoryId=""
                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        همه محصولات
                        <i class="bi bi-chevron-left small text-muted"></i>
                    </a>

                    @foreach (var category in Model.CategoryDtos)
                    {
                        <a asp-controller="Home" asp-action="Index" asp-route-categoryId="@category.Id"
                           class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            @category.Name
                            <i class="bi bi-chevron-left small text-muted"></i>
                        </a>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-9 col-md-8">

            <div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
                <h5 class="fw-bold m-0"><span style="color: #ef394e;">|</span> کالاها</h5>
                <span class="text-muted small">(@Model.ProductResult.TotalCount کالا )</span>
            </div>

            @if (!Model.ProductResult.Products.Any())
            {
                <div class="alert alert-warning text-center">
                    هیچ محصولی یافت نشد.
                </div>
            }
            else
            {
                <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-3">
                  
                    @foreach (var product in Model.ProductResult.Products)
                    {
                        <div class="col">
                        
                            <div class="product-card h-100">
                                <div class="product-img-container">
                                    <img src="~/images/ProductsAgg/@(string.IsNullOrEmpty(product.Image) ? "default.png" : product.Image)" alt="@product.Title" />
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <span class="category-badge mb-1">@product.CategoryName</span>
                                    <h6 class="product-title flex-grow-1">@product.Title</h6>
                                    <div class="mt-3 price-section">
                                        <span class="price-amount">@product.Price.ToString("N0")</span> <span class="currency">تومان</span>
                                    </div>
                                   
                                    <div class="mt-3">
                                        <a asp-controller="Product" asp-action="Detail" asp-route-productId="@product.Id" class="btn btn-dk-outline w-100 btn-sm">جزئیات</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                @if (Model.ProductResult.TotalPages > 1)
                {
                    <nav aria-label="Page navigation" class="mt-5">
                        <ul class="pagination justify-content-center">

                            <li class="page-item @(Model.ProductResult.HasPreviousPage ? "" : "disabled")">
                                <a class="page-link"
                                   asp-controller="Home"
                                   asp-action="Index"
                                   asp-route-categoryId="@Model.CurrentCategoryId"
                                   asp-route-pageNumber="@(Model.ProductResult.PageNumber - 1)">
                                    قبلی
                                </a>
                            </li>

                            @for (int i = 1; i <= Model.ProductResult.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.ProductResult.PageNumber ? "active" : "")">
                                    <a class="page-link"
                                       asp-controller="Home"
                                       asp-action="Index"
                                       asp-route-categoryId="@Model.CurrentCategoryId"
                                       asp-route-pageNumber="@i">
                                        @i
                                    </a>
                                </li>
                            }

                            <li class="page-item @(Model.ProductResult.HasNextPage ? "" : "disabled")">
                                <a class="page-link"
                                   asp-controller="Home"
                                   asp-action="Index"
                                   asp-route-categoryId="@Model.CurrentCategoryId"
                                   asp-route-pageNumber="@(Model.ProductResult.PageNumber + 1)">
                                    بعدی
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>