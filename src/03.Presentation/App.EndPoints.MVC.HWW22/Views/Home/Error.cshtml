@{
    ViewData["Title"] = "خطا";
    Layout = null; // اگر لی‌اوت کلی سایتت مناسب صفحه ارور نیست این رو بذار، وگرنه حذفش کن
    var requestId = Context.Items["RequestId"]?.ToString();
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>خطای سیستمی - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Tahoma, 'Segoe UI', sans-serif;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .error-card {
            max-width: 500px;
            width: 100%;
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

        .error-icon {
            font-size: 80px;
            color: #dc3545;
            margin-bottom: 20px;
        }

        .request-id-box {
            background-color: #ffe6e6;
            color: #cc0000;
            padding: 10px;
            border-radius: 8px;
            font-family: monospace;
            direction: ltr; /* کد را چپ‌چین نشان دهد */
            margin-top: 15px;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="card error-card text-center p-5">
            <div class="card-body">
                <div class="error-icon">
                    ⚠️
                </div>

                <h2 class="mb-3 text-danger">اوپس! مشکلی پیش آمده</h2>

                <p class="text-muted mb-4" style="font-size: 1.1rem;">
                    متاسفانه سیستم با یک خطای غیرمنتظره روبرو شده است.
                    <br>
                    تیم فنی ما به صورت خودکار از این موضوع مطلع شده است.
                </p>

                @if (!string.IsNullOrEmpty(requestId))
                {
                    <p class="small text-secondary mb-1">کد پیگیری شما:</p>
                    <div class="request-id-box">
                        @requestId
                    </div>
                    <p class="small text-muted mt-2">
                        در صورت تماس با پشتیبانی، این کد را اعلام کنید.
                    </p>
                }

                <div class="mt-4">
                    <a href="/" class="btn btn-primary btn-lg px-4">بازگشت به صفحه اصلی</a>
                    <a href="/Admin/Account/Login" class="btn btn-outline-secondary btn-lg px-4 ms-2">صفحه ورود</a>
                </div>
            </div>
        </div>
    </div>

</body>
</html>