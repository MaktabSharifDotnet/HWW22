@model App.EndPoints.MVC.HWW22.Models.EditProfileViewModel
@{
    ViewData["Title"] = "پروفایل کاربری";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">پروفایل من</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center mb-3">
                    <i class="bi bi-person-circle display-1 text-secondary"></i>
                    <h3 class="mt-2">@Model.Username</h3>
                </div>
                <div class="col-md-8">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>شماره موبایل:</strong> @(Model.PhoneNumber ?? "ثبت نشده")
                        </li>
                        <li class="list-group-item">
                            <strong>ایمیل:</strong> @(Model.Email ?? "ثبت نشده")
                        </li>
                    </ul>

                    <div class="mt-4">
                        <a asp-action="EditProfile" class="btn btn-warning me-2">
                            <i class="bi bi-pencil-square"></i> ویرایش مشخصات
                        </a>
                        <a asp-action="ChangePassword" class="btn btn-danger">
                            <i class="bi bi-key"></i> تغییر رمز عبور
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>